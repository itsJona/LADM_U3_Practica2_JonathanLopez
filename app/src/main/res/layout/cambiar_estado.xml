<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione un estatus:" />

        <RadioButton
            android:id="@+id/entregadoCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entregado" />

        <RadioButton
            android:id="@+id/noEntregadoCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No entregado" />

        <Button
            android:id="@+id/btnAceptarCambio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aceptar" />

        <Button
            android:id="@+id/btnCancelarCambio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cancelar" />
    </RadioGroup>
</LinearLayout>